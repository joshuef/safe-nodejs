{
  "name": "safe-nodejs",
  "version": "0.2.0",
  "description": "NodeJS binding for SAFE API",
  "main": "lib/index.js",
  "author": "Josh Wilson <joshuef@gmail.com>",
  "contributors": "Gabriel Viganotti <gabrielviganotti@gmail.com>",
  "license": "(MIT OR BSD-3-Clause)",
  "scripts": {
    "postinstall": "if cross-var test $SAFE_NODEJS_DEV != \"true\"; then node-pre-gyp install --fallback-to-build=false || neon build --release ; fi ",
    "package": "node-pre-gyp package",
    "package-electron": "yarn node-pre-gyp package --runtime=electron --target=6.0.7 --dist-url=https://electronjs.org/headers",
    "upload-binaries": "yarn package && yarn package-electron && node-pre-gyp-github publish",
    "neon-build-electron": "npm_config_target=6.0.7 npm_config_arch=x64 npm_config_disturl=https://electronjs.org/headers npm_config_runtime=electron neon build --release",
    "test": "cross-env RUSTFLAGS='--cfg feature=\"scl-mock\"' neon build --release && cross-env NODE_ENV=test mocha --recursive"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maidsafe/safe-nodejs.git"
  },
  "files": [
    "native/index.node",
    "lib"
  ],
  "binary": {
    "module_name": "index",
    "host": "https://github.com/maidsafe/safe-nodejs/releases/download/",
    "remote_path": "{version}",
    "package_name": "{node_abi}-{platform}-{arch}.tar.gz",
    "module_path": "./native",
    "pkg_path": "."
  },
  "dependencies": {
    "add": "^2.0.6",
    "neon-cli": "^0.3.1",
    "node-pre-gyp": "amilajack/node-pre-gyp",
    "node-pre-gyp-github": "^1.4.3",
    "yarn": "^1.17.3"
  },
  "devDependencies": {
    "cross-env": "^6.0.0",
    "cross-var": "^1.1.0",
    "mocha": "^6.2.0"
  }
}
